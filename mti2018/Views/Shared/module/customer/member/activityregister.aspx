        // Select คุณเป็นลูกค้าของเมืองไทยประกันภัยหรือไม่?
        $("input:radio[name=rdo_checkscutomer]").click(function () {
            var iidd = $(this).attr('id');
            if (iidd == 'cus_y') {
                $('#no').removeClass('active');
                $('#yes').addClass('active');
            } else {
                $('#yes').removeClass('active');
                $('#no').addClass('active');
            }
        });

        // Select คุณได้รับข่าวสารกิจกรรมนี้จากช่องทางใด?
        $("input:radio[name=rdo_checksnews]").click(function () {
            var iiddtwo = $(this).attr('id');
            if (iiddtwo == 'cus_sms') {
                $('#newsSMS').addClass('active');
            } else {
                $('#newsSMS').removeClass('active');
            }
            if (iiddtwo == 'cus_email') {
                $('#newsEmail').addClass('active');
            } else {
                $('#newsEmail').removeClass('active');
            }
            if (iiddtwo == 'cus_other') {
                $('#newsOther').addClass('active');
            } else {
                $('#newsOther').removeClass('active');
            }
        });
    });
</script>